{% extends 'genesis/main/main.html.twig' %}

{% block title %}
    {{ title|e }}
{% endblock %}

{% block sitename %}
    {{ sitename|e }}
{% endblock %}

{% block styles %}
        <link href="{{ asset('build/main/post.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <body>
        <main class="main-post main-text">
            <h1>{{ title|e }}</h1>
            <div class="post-metadata row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    {{ author|e }}
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    {{ date_created|e }}
                </div>
            </div>
            <div class="post-content">{{ content|e }}</div>
        </main>
    </body>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('build/main/post.js') }}"></script>
{% endblock %}
