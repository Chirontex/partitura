<!doctype html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <title>
            {% block title %}
                {% if app.request.attributes.get('_route') == routes.profile %}
                    Основная информация
                {% else %}
                    Ваш профиль
                {% endif %}
            {% endblock %} | {{ sitename|e }}
        </title>
        <link href="{{ asset('build/app.css') }}" rel="stylesheet">
        <style>
            {{ include('genesis/style/fonts/ubuntu.html.twig') }}
        </style>
        <link href="{{ asset('build/profile/profile.css') }}" rel="stylesheet">
        <link href="{{ asset('build/main/header.css') }}" rel="stylesheet">
        {% block styles %}{% endblock %}
    </head>
    <body>
        {{ include('genesis/content/people_circle.html.twig') }}
        {{ include('genesis/main/header.html.twig') }}
        <div class="container-fluid profile-content">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3 sidebar-sticky">
                        <ul class="nav flex-column ms-1">
                            <li class="nav-item">
                                <a class="nav-link
                                {% if app.request.attributes.get('_route') == routes.profile %}
                                    active
                                {% endif %}
                                " aria-current="page" href="{{ path(routes.profile|e) }}">
                                    <span data-feather="file-text" class="align-text-bottom"></span>
                                    Основная информация
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="#">
                                    <span data-feather="users" class="align-text-bottom"></span>
                                    Безопасность
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
                {% block content_profile %}{% endblock %}
            </div>
        </div>
        {% block content %}{% endblock %}
    </body>
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/style/fonts/ubuntu.js') }}"></script>
    <script src="{{ asset('build/profile/profile.js') }}"></script>
    <script src="{{ asset('build/main/header.js') }}"></script>
    {% block scripts %}{% endblock %}
</html>